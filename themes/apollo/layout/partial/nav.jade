ul.nav.nav-list
    each value, key in theme.menu
        li.nav-list-item
            - var re = /^(http|https):\/\/*/gi;
            - var tar = re.test(value) ? "_blank" : "_self"
            //- 标签页面
            - var is_tag = value === '/tag/' && page.path === 'tag/index.html';
            a.nav-list-link(class={active: is_home() && value === "/" || is_archive() && value.indexOf('/archives') === 0 || is_tag} href=value target=tar)
                != key